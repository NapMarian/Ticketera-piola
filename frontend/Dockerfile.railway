FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build arg for API URL (Railway passes env vars as build args)
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

# Build the app with the env var
RUN npm run build

# Expose port
EXPOSE 3000

# Start the server
CMD ["node", "server.cjs"]
